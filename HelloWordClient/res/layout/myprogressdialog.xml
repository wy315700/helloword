<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">
<TextView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/progressdialog_title"
    android:gravity="center"/>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    >
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_imageview1"
        android:background="@color/transparent"
        android:src="@drawable/progress_image2"
        android:layout_marginRight="5px"/>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_imageview2"
        android:background="@color/transparent"
		android:src="@drawable/progress_image1"
        android:layout_marginRight="5px"/>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_imageview3"
        android:background="@color/transparent"
        android:src="@drawable/progress_image1"
        android:layout_marginRight="5px"/>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_imageview4"
        android:background="@color/transparent"
        android:src="@drawable/progress_image1"
        android:layout_marginRight="5px"/>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_imageview5"
        android:background="@color/transparent"
        android:src="@drawable/progress_image1"
        android:layout_marginRight="5px"/>
</LinearLayout>   
</LinearLayout>